<div class="row">
	<div class"col s6">
		<h3>Name: <%= @borrower.first_name%> <%= @borrower.last_name%> </h3>
		<h5>Amount Need: $<%= @borrower.money %> </h5>
		<h4>Raised: $<%= @borrower.histories.sum(:amount)%> </h4>
	</div>
</div>

<div class="row">
	<div class="col s8">
	<h3>List of people who lend you money:</h3>
	<table>
		<thead>
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>Amount Lent</th>
			</tr>
		</thead>
		<% @borrowers.each do |b| %>
		<tbody>
			<tr>
				<td><%= b.lender.first_name %> <%= b.lender.last_name %></td>
				<td><%= b.lender.email %></td>
				<td>$<%= b.amount %></td>
			</tr>
		</tbody>
		<% end %>
	</table>
	</div>
</div>